{
  "name": "regen-web",
  "private": true,
  "description": "Regen Website",
  "homepage": "https://github.com/regen-network/regen-web",
  "bugs": {
    "url": "https://github.com/regen-network/regen-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/regen-network/regen-wb"
  },
  "dependencies": {
    "serve": "^11.2.0"
  },
  "workspaces": [
    "web",
    "web-www",
    "web-components",
    "web-storybook"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build-storybook": "yarn build && lerna run build-storybook --stream",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "serve": "serve web-old/build -l ${PORT:-5000}",
    "storybook": "lerna run storybook --stream",
    "test": "lerna run --scope web test --stream",
    "start": "lerna run start --stream",
    "watch": "lerna run watch --stream"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addon-viewport": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.1",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "babel-loader": "8.0.6",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "prettier": "1.19.1",
    "shx": "^0.3.2",
    "typescript": "3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn build && yarn lint"
    }
  }
}
